<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_pink_background"
    android:paddingStart="16dp"
    android:paddingTop="6dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:textStyle="bold"
        android:id="@+id/codigoDoCupom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CÃ³digo do Cupom"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/valorDoCupom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor do Cupom"
        android:textStyle="italic"
        android:textColor="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/cupomAtivado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Ativado"
        android:textStyle="bold"
        android:textColor="@color/strong_pink"
        android:layout_gravity="end"
        android:layout_marginEnd="10sp"
        android:textSize="14sp" />
</LinearLayout>
