<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    android:gravity="top"
    android:orientation="vertical"

    tools:context=".activity.CarrinhoActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Minha encomenda"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- Resumo com produtos -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="casual"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:minHeight="36dp"
            android:text="Resumo"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"

            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:text="Valor"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:id="@+id/encomendaTotal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/bg_edit_text"
                android:hint="R$ 00.00"
                android:inputType="none"
                android:minHeight="36dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical"
                android:minHeight="34dp"
                android:text="Quantidade"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:id="@+id/enconmendaQuantidade"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/bg_edit_text"
                android:hint="R$ 00.00"
                android:inputType="none"
                android:minHeight="36dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"

            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:text="Desconto"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:id="@+id/encomendaDesconto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/bg_edit_text"
                android:hint="R$ 00.00"
                android:inputType="none"
                android:minHeight="36dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="32dp"
                android:gravity="center_vertical"
                android:minHeight="36dp"
                android:text="Total"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false"
                android:id="@+id/encomendaValorFinal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/bg_edit_text"
                android:hint="R$ 00.00"
                android:inputType="none"
                android:minHeight="36dp" />
        </TableRow>
    </TableLayout>

    <!-- Cupom de desconto -->
    <LinearLayout
        android:gravity="start"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:padding="6dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:text="Caso o pedido contenha mais de 25 unidade, existe um desconto 15%. Acima de 50 unidades, o desconto Ã© de 30%."
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- Finalizar Compra -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/finalizarEncomenda"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Finalizar Encomenda"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="20dp" />
    </LinearLayout>

</LinearLayout>
